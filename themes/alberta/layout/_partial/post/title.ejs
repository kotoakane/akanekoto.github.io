<% if (post.link){ %>
  <h1 itemprop="name">
    <p class="<%= class_name %>"><%= post.title %></p>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <p class="<%= class_name %>"><%= post.title %></p>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>